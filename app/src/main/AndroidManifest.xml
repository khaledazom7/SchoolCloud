<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amjad.myapplicationschool">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationSchool">
        <activity android:name=".ui.activity.OpenTeacherProfile"></activity>
        <activity
            android:name=".ui.activity.TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:theme="@style/Theme.MyApplicationSchool.NoActionBar" />
        <activity
            android:name=".ui.activity.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.MyApplicationSchool.NoActionBar" />
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.RegisterActivity" />
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplicationSchool.NoActionBar" />
    </application>

</manifest>